<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true" android:state_active="true">
        <shape
             >
        <solid android:color="@color/custom_grey"/>
        <corners android:radius="8dp"/>
        <padding android:left="5dp" android:bottom="3dp"/>
        <stroke android:color="@color/custom_primary_color" android:width="3dp" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_active="false" >
        <shape android:innerRadius="8dp" android:shape="rectangle">
            <solid android:color="@color/custom_grey" />

            <padding android:left="5dp" android:bottom="3dp"/>
            <corners android:topLeftRadius="6dp" android:topRightRadius="6dp"/>

        </shape>
    </item>





</selector>