<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/search_user_item_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/user_post_card"
    android:elevation="4dp"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    android:padding="4dp"
    android:orientation="horizontal">

<ImageView
    android:id="@+id/search_user_profile_image"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@drawable/image_oval"
    android:maxHeight="@dimen/round_image_width"
    android:src="@drawable/auth_person"
    android:scaleType="center"
    android:contentDescription="@string/profile_image"
    android:layout_marginHorizontal="10dp"
    />

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginVertical="6dp"
        android:id="@+id/search_username"
        android:gravity="start"
        android:textColor="@color/custom_primary_accent_color"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        />
    <TextView
        android:textSize="12sp"
        android:fontFamily="@font/roboto_light"
        android:gravity="start"
        android:id="@+id/search_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        />

</LinearLayout>


</LinearLayout>