<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="loading_drawable_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:background">@drawable/spinner_anim_</item>
        <item name="android:layout_marginHorizontal">10dp</item>
    </style>

    <style name="dashboard_count_style">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>

        <item name="maxWidth">80dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontWeight">700</item>

        <item name="android:padding">3dp</item>
        <item name="android:layout_marginVertical">3dp</item>
    </style>

    <style name="dashboard_count_style_info">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="maxWidth">80dp</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_light</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">3dp</item>

    </style>

    <style name="dashboard_item_list_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:elevation">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">3dp</item>
    </style>
</resources>